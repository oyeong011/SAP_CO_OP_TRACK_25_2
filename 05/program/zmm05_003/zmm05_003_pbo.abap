MODULE STATUS_0100 OUTPUT.

  SET PF-STATUS 'S100'.

  SET TITLEBAR 'T100'.





  LOOP AT SCREEN.

    IF SCREEN-NAME CS 'GS_MK'.

      SCREEN-INPUT = 0.

    ENDIF.

    MODIFY SCREEN.

  ENDLOOP.

ENDMODULE.



MODULE SET_ALV_101 OUTPUT.

  IF GC_CONTAINER IS INITIAL.

    CREATE OBJECT GC_CONTAINER

      EXPORTING CONTAINER_NAME = 'CON1'.



    CREATE OBJECT GC_GRID

      EXPORTING I_PARENT = GC_CONTAINER.



    PERFORM SET_LAYOUT.

    PERFORM MAKE_FIELDCATALOG_101.

    PERFORM CLASS_EVENT. " ## ## # # ###.



    CALL METHOD GC_GRID->SET_TABLE_FOR_FIRST_DISPLAY

      EXPORTING IS_LAYOUT = GS_LAYOUT

      CHANGING  IT_OUTTAB = GT_ITEM

                IT_FIELDCATALOG = GT_FC.

  ELSE.

    PERFORM REFRESH.

  ENDIF.

ENDMODULE.



MODULE STATUS_0200 OUTPUT.

