MODULE STATUS_0100 OUTPUT.

  SET PF-STATUS 'S100'.

  SET TITLEBAR 'T100'.

ENDMODULE.



MODULE SET_ALV_101 OUTPUT.

  IF GC_CONTAINER IS INITIAL.

    CREATE OBJECT GC_CONTAINER

      EXPORTING CONTAINER_NAME = 'CON1'.



    CREATE OBJECT GC_GRID

      EXPORTING I_PARENT = GC_CONTAINER.



    DATA : LS_LAYOUT TYPE LVC_S_LAYO.

    LS_LAYOUT-ZEBRA = 'X'.



    PERFORM BUILD_FCAT_CREATION.

    PERFORM REGISTER_ALV_EVENTS.



    CALL METHOD GC_GRID->SET_TABLE_FOR_FIRST_DISPLAY

      EXPORTING IS_LAYOUT = LS_LAYOUT

      CHANGING  IT_OUTTAB = GT_DISPLAY

                IT_FIELDCATALOG = GT_FC.

  ELSE.

    PERFORM REFRESH_GRID_DISPLAY.

  ENDIF.

ENDMODULE.



MODULE STATUS_0200 OUTPUT.

  SET PF-STATUS 'S200'.

  SET TITLEBAR 'T200'.

ENDMODULE.



MODULE SET_ALV_201 OUTPUT.



  IF GC_CONTAINER_201 IS INITIAL.



    CREATE OBJECT GC_CONTAINER_201

      EXPORTING CONTAINER_NAME = 'CON2'.



    CREATE OBJECT GC_GRID_201

      EXPORTING I_PARENT = GC_CONTAINER_201.



    DATA : LS_LAYOUT2 TYPE LVC_S_LAYO.

    LS_LAYOUT2-ZEBRA = 'X'.

    LS_LAYOUT2-SEL_MODE = 'A'.



    PERFORM BUILD_FCAT_DISPLAY.



    CREATE OBJECT GO_EVENT.

    SET HANDLER GO_EVENT->HANDLER_DATA_CHANGED FOR GC_GRID_201.

    SET HANDLER GO_EVENT->HANDLER_DATA_CHANGED_FINISHED FOR GC_GRID_201.



    CALL METHOD GC_GRID_201->REGISTER_EDIT_EVENT

      EXPORTING I_EVENT_ID = CL_GUI_ALV_GRID=>MC_EVT_MODIFIED.



    CALL METHOD GC_GRID_201->SET_TABLE_FOR_FIRST_DISPLAY

      EXPORTING IS_LAYOUT       = LS_LAYOUT2

      CHANGING  IT_OUTTAB       = GT_MSEG

                IT_FIELDCATALOG = GT_FC.



  ELSE.

    PERFORM REFRESH_DETAIL_GRID.

  ENDIF.



ENDMODULE.