MODULE USER_COMMAND_0100 INPUT.

  CASE OK_CODE.

    WHEN 'SAVE'.

      PERFORM PROCESS_INVOICE_SAVE.

  ENDCASE.

ENDMODULE.



MODULE EXIT_COMMAND INPUT.

  CASE OK_CODE.

    WHEN 'BACK' OR 'EXIT' OR 'CANCEL'.

      IF GO_CONTAINER_100 IS BOUND.

        CALL METHOD GO_GRID_100->FREE.

        CALL METHOD GO_CONTAINER_100->FREE.

        FREE: GO_GRID_100, GO_CONTAINER_100, GO_EVENT_100.

      ENDIF.

      IF GO_CONTAINER_200 IS BOUND.

        CALL METHOD GO_GRID_200->FREE.

        CALL METHOD GO_CONTAINER_200->FREE.

        FREE: GO_GRID_200, GO_CONTAINER_200, GO_EVENT_200.

      ENDIF.

      LEAVE TO SCREEN 0.

  ENDCASE.

ENDMODULE.



MODULE USER_COMMAND_0101 INPUT.

  CALL METHOD CL_GUI_CFW=>DISPATCH.

ENDMODULE.



MODULE USER_COMMAND_0200 INPUT.

  CASE OK_CODE.

    WHEN 'DELETE'.

      PERFORM PROCESS_INVOICE_CANCEL.

  ENDCASE.

ENDMODULE.



MODULE USER_COMMAND_0201 INPUT.

