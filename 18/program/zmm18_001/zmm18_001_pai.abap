MODULE USER_COMMAND_0100 INPUT.

  CASE OK_CODE.

    WHEN 'APND'.

      PERFORM APPEND_ROW.

    WHEN 'ADD'.

      PERFORM ADD_TO_DB.

  ENDCASE.

ENDMODULE.




